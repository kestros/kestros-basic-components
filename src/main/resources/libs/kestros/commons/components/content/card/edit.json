{
  "jcr:primaryType": "nt:unstructured",
  "sling:resourceType": "kestros/cms/dialog",
  "jcr:title": "Edit",
  "content-area": {
    "jcr:primaryType": "nt:unstructured",
    "tabs": {
      "jcr:primaryType": "nt:unstructured",
      "sling:resourceType": "kestros/cms/general/tabs",
      "container": true,
      "general": {
        "jcr:primaryType": "nt:unstructured",
        "sling:resourceType": "kestros/cms/general/container",
        "jcr:title": "General",
        "container": true,
        "title": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/fields/textfield",
          "label": "Heading",
          "propertyName": "jcr:title",
          "autofocus": true
        },
        "description": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/fields/textfield",
          "label": "Description",
          "propertyName": "jcr:description",
          "autofocus": false
        },
        "call-to-action": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/fields/textfield",
          "label": "Call To Action",
          "propertyName": "callToActionText",
          "autofocus": false
        },
        "link": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/fields/textfield",
          "label": "Link",
          "propertyName": "link",
          "autofocus": false
        },
        "background-image": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/fields/pathfield",
          "label": "Image",
          "propertyName": "image",
          "resourceTypes": [
            "kes:Asset"
          ],
          "rootPath": "/content/assets"
        },
        "imageAltText": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/fields/textfield",
          "label": "Image Alt Text",
          "propertyName": "imageAltText"
        }
      },
      "styles": {
        "jcr:primaryType": "nt:unstructured",
        "sling:resourceType": "kestros/cms/general/container",
        "image-variations": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/dialog-fields/general/component-variations-picker",
          "label": "Image Variations",
          "propertyName": "variationsImage",
          "autofocus": false
        },
        "title-variations": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/dialog-fields/general/component-variations-picker",
          "label": "Title Variations",
          "propertyName": "variationsTitle",
          "autofocus": false
        },
        "call-to-action-variations": {
          "jcr:primaryType": "nt:unstructured",
          "sling:resourceType": "kestros/cms/dialog-fields/general/component-variations-picker",
          "label": "Call To Action Variations",
          "propertyName": "buttonVariations",
          "sourceComponentType": "/libs/kestros/commons/components/content/button",
          "autofocus": false
        }
      }
    }
  }
}
